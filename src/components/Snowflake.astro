<script>
  import Snowflakes from "magic-snowflakes";
  // Get the current date
  let currentDate = new Date();
  // Get the current year
  let currentYear = currentDate.getFullYear();

  // Create date objects for the start and end of the desired range
  let startDate = new Date(currentYear, 11, 1); // Months are 0-indexed in JavaScript
  let endDate = new Date(currentYear + 1, 0, 30);

  // Check if the current date is within the desired range
  if (currentDate >= startDate && currentDate <= endDate) {
    // create a new instance of the snowflakes class
    new Snowflakes({
      color: "#ffffff",
    });
  }
</script>
